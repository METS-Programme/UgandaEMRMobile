<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UgandaEMRMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Required Material attributes -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Optional: Disable action bar if using Compose -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Required for MaterialDatePicker -->
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar
        </item>
    </style>

</resources>
